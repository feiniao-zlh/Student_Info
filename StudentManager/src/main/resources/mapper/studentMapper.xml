<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.studentmanager.dao.StudentDao">
<!--    添加学生信息-->
    <insert id="insertStudent" parameterType="com.test.studentmanager.pojo.Student">
        insert into student values(#{id},#{name},#{age},#{gender})
    </insert>

<!--    修改学生信息-->
    <update id="updateById" parameterType="com.test.studentmanager.pojo.Student">
        update student set name=#{name},age=#{age},gender=#{gender} where id=#{id}
    </update>

    <!--    删除学生信息-->
    <delete id="deleteById" parameterType="integer">
        DELETE from student where id=#{id}
    </delete>


    <select id="selectAll" resultType="com.test.studentmanager.pojo.Student">
        select * from student
    </select>

    <select id="selectById" parameterType="integer" resultType="com.test.studentmanager.pojo.Student">
        select * from student where id=#{id}
    </select>
</mapper>